{
  "verbose": true,
  "clearMocks": true,
  "coverageDirectory": "coverage",
  "transform": {
    "^.+\\.(t|j)s?$": ["ts-jest"]
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/main.ts",
    "!<rootDir>/src/**/index.ts",
    "!<rootDir>/src/database/database.service.ts",
    "!<rootDir>/src/**/*.{interface,dto,module,schema}.ts"
  ],
  "testMatch": ["<rootDir>/__tests__/unit/**/*.test.ts"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "@mocks/(.*)": "<rootDir>/__mocks__/$1"
  },
  "coverageThreshold": {
    "global": {
      "lines": 100,
      "branches": 100,
      "functions": 100,
      "statements": 100
    }
  }
}
