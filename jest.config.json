{
  "verbose": true,
  "clearMocks": true,
  "coverageDirectory": "coverage",
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest"]
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/main.ts",
    "!<rootDir>/src/**/index.ts",
    "!<rootDir>/src/infrastructure/config/container.di.ts",
    "!<rootDir>/src/infrastructure/database/database.service.ts",
    "!<rootDir>/src/**/*.{interface,dto,module,fastify,schema}.ts"
  ],
  "testMatch": ["<rootDir>/__tests__/unit/**/*.test.ts"],
  "moduleNameMapper": {
    "@mocks/(.*)": "<rootDir>/__mocks__/$1",
    "@domain/(.*)": "<rootDir>/src/domain/$1",
    "@application/(.*)": "<rootDir>/src/application/$1",
    "@infrastructure/(.*)": "<rootDir>/src/infrastructure/$1"
  },
  "coverageThreshold": {
    "global": {
      "lines": 100,
      "branches": 100,
      "functions": 100,
      "statements": 100
    }
  }
}
