{
  "verbose": true,
  "clearMocks": true,
  "coverageDirectory": "coverage-e2e",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/**/{main,index}.ts",
    "!<rootDir>/src/**/*.{interface,schema}.ts"
  ],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(t|j)sx?$": ["ts-jest"]
  },
  "testMatch": ["<rootDir>/__tests__/e2e/**/*.e2e-test.ts"]
}
